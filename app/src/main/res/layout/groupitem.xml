<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:layout_marginRight="10dp"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/picholder"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:cardCornerRadius="25dp">

        <ImageView
            android:id="@+id/usrepic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_action_account" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/usrename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/picholder"
        android:text="Username"
        android:textSize="15sp" />

        <ImageView
            android:id="@+id/addtogroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/ticks" />

    <TextView
        android:id="@+id/groupfriendrequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="Request"
        android:layout_marginRight="5dp"
        app:srcCompat="@drawable/drawablebackgroundresource" />

</RelativeLayout>